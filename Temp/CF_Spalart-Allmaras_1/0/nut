FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0.0;

boundaryField
{
    Inlet
    {
        type            calculated;
        value           uniform 0.0;
    }

    Outlet
    {
        type            calculated;
        value           uniform 0.0;
    }

    Cylinder
    {
        type            nutUSpaldingWallFunction;
        value           uniform 0.0;
    }

    Top
    {
        type            calculated;
        value           uniform 0.0;
    }

    Bottom
    {
        type            calculated;
        value           uniform 0.0;
    }

    frontAndBack
    {
        type            empty;
    }
}

